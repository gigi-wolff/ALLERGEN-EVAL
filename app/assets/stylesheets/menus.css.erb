.menu-action-button{
  color: white;
  background-color: #39823c !important;
  border-color: #aff9ae !important;
}
 
.menu-action-button:hover {
  color: white;
  background-color: #2E6B2D !important;
  border-color: #aff9ae !important;
}

.menu-panel {
  padding: 2%;
  width: 48%;
  display: inline-block;
  float: left;
  font-size: 3rem;
  margin: 10px;
  border: 3px solid #f0f3f5;
  color: #00334d;;
  background: #dce6ef;
  box-shadow: 9px 17px 4px 4px rgba(0, 0, 0, 0.3);
}
/*------------------*/
/* For mobile phones: */
@media (max-width: 1100px) {
  .menu-panel {
    width: 100%;
  }
}